<Window x:Class="kursov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kursov"
        mc:Ignorable="d"
        Title="MainWindow" Height="381.856" Width="364.513" Background="BlueViolet">
    <Border Background="Black" CornerRadius="25" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Email" Foreground="White" FontSize="20"/>
            <TextBox x:Name="txtEmail" Background="#FF464545" FontSize="20"/>
            <Label Content="Password" Foreground="White" FontSize="20"/>
            <TextBox x:Name="txtPassword" Background="#FF464545" FontSize="20"/>
            <Button x:Name="btnSubmit" Content="Submit" Margin="60 20" Background="BlueViolet" FontSize="25" Click="btnSubmit_Click"/>
        </StackPanel>
    </Border>
</Window>
