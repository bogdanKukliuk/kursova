                    <Image Source="Imagess\Двигун.jpg"/>
                    <Image Source="Imagess\Двигун.jpg"/>
                    <Image Source="Imagess\Двигун.jpg"/>
                    <Image Source="Imagess\Двигун.jpg"/>
                    <Image Source="Imagess\Двигун.jpg"/>
                    <Image Source="Imagess\Двигун.jpg"/>
