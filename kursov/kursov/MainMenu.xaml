            <Button x:Name="btnBin" Content="Корзина" Grid.Column="3" Margin="1,3,0,0"/>
            <Button x:Name="btnLogin" Content="Логін" Grid.Row="0" Grid.Column="2" Margin="4,3,4,0"/>
            <Grid MinHeight="500" MinWidth="800" Margin="0,30,0,-546" Grid.Row="3" Grid.ColumnSpan="5">
                <ListBox MinWidth="800" MinHeight="500" MaxWidth="1100" Margin="0,10">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True" Orientation="Horizontal" MaxWidth="1100"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <Image Source="Reno.jpg" Height="130" Width="130"/>
                    <Image Source="Reno.jpg" Height="130" Width="130"/>
                    <Image Source="Reno.jpg" Height="130" Width="130"/>
                    <Image Source="Reno.jpg" Height="130" Width="130"/>
